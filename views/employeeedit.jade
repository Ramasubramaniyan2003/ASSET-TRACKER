body
        .container-fluid.tablecontainer
            .modal.fade#editmodalId(tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true")
                .modal-dialog.modal-lg(role="document")
                    .modal-content
                        .modal-header
                            h5.modal-title#modalTitleId
                                Modal Asset Tracker
                            button(type="button" data-bs-dismiss="modal" aria-label="Close").btn-close
                        .modal-body    
                            h3.mx-5.mt-5#addemployeelogo Edit Employee
                            table.mt-5.inputtable
                                tr
                                    th
                                        p(for="name" ) Full Name
                                    td 
                                        input.p-3(type="text" name="name" id="editname" placeholder="Name"  )
                                tr 
                                    th 
                                        p(for="email") Email
                                    td 
                                        input.p-3(type="text" name="email"  id="editemail" placeholder="abc@gmail.com" )
                                tr 
                                    th 
                                        p(for="contact") Contact
                                    td 
                                        input.p-3(type="tel" name="contact" id="editcontact" placeholder="9876543210" )    
                                tr 
                                    th 
                                        p(for="address") Address
                                    td 
                                        textarea#editaddress(name="address", cols="60", rows="6" ) 
                                tr 
                                    th 
                                        p(for="branch") Branch
                                    td 
                                        select#editbranch.p-3(name="branch" )
                                            option(value="Salem") Salem
                                            option(value="Coimbatore") Coimbatore
                                            option(value="Chennai") Chennai
                                            option(value="Hyderabad") Hyderabad 
                                            option(value="Banglore") Banglore
                                        
                                tr 
                                    th 
                                        p(for="joindate") Join Date
                                    td 
                                        input.p-3#editjoindate(type="date" name="joindate" placeholder="dd/mm/yyyy"  )
                                tr 
                                    th 
                                        p(for="enddate") End Date
                                    td 
                                        input.p-3#editenddate(type="date" name="enddate" placeholder="dd/mm/yyyy" )
                                tr 
                                    th 
                                        p(for="salary") Salary
                                    td 
                                        input.p-3(type="number" placeholder="ex:25000 per month" id="editsalary")
                                tr 
                                    th 
                                        p(for="department" ) Department
                                    td 
                                        select.ps-3#editdepartment(name="department" required)
                                            option(value="IT") IT
                                            option(value="Human resource") Human resource
                                            option(value="Sales") Sales
                                            option(value="Marketing") Marketing 
                                            option(value="Finance") Finance
                                            option(value="Finance") Maintence department
                                            option(value="Accounting") Accounting
                                tr 
                                    th
                                        p(for="Status")#editstatus Status 
                                    td  
                                        .form-check.form-switch.mb-3(onclick="statuschecking()")
                                            input.form-check-input.statusbutton(type="checkbox" role="switch" id="editflexSwitchCheckChecked" checked required) 
                                            p.mx-4.my-auto#activestatus
                                                |Active
                        .modal-footer
                            button.btn.btn-danger.mt-3(aria-label="Close" data-bs-dismiss="modal") Cancel 
                            button.btn.btn-success.mt-3(onclick="editemployeesubmit()") Submit
                                