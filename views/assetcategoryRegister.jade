link( rel="stylesheet" href="/css/assetcategoryRegister.css")
script(src="/js/assetcategoryRegister.js") 

    .container.tablecontainer.mt-5
        .row.mt-5
            .col-sm-3
                h3.employeetopic Asset Category
            .col-sm-9
                a.addassetcategorybutton#addassetcategorybutton.btn.btn-primary(type="button" data-bs-toggle="modal" data-bs-target="#assetcategorymodalId")  Add Assetcategory
                a.btn.btn-primary.stocks.me-3(type="button" data-bs-toggle="modal" data-bs-target="#stocksmodalId") Stocks
        .modal.fade#assetcategorymodalId(tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true")
            .modal-dialog.modal-none(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title#modalTitleId
                            Modal Add Asset 
                        button(type="button" data-bs-dismiss="modal" aria-label="Close").btn-close
                    .modal-body    
                            
                        table.assetdetailtable
                            tr
                                td 
                                    label(for="assetname").mx-3  Asset Name
                                    input.p-3(type="text" name="name" id="assetname" placeholder="Asset name"  )   
                    .modal-footer
                        button.btn.btn-danger(aria-label="Close" data-bs-dismiss="modal") Cancel 
                        button.btn.btn-success(onclick="addassetcategory()") Add
            //- stocks
        .modal.fade#stocksmodalId(tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true")
            .modal-dialog.modal-fullscreen(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title#modalTitleId
                            Modal Stocks 
                        button(type="button" data-bs-dismiss="modal" aria-label="Close").btn-close
                    .modal-body    
                        table.stocktable
                            tr
                                td 
                                    th Id 
                                    th Serial no
                                    th Name 
                                    th Model 
                                    th Category
                                    th Scrap status
                    .modal-footer
                        button.btn.btn-danger(aria-label="Close" data-bs-dismiss="modal") Cancel 
                        button.btn.btn-success(onclick="addassetcategory()") Add
                                  